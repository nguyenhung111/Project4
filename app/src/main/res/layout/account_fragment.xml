<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imgVKH"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_account_circle_black_24dp"
            android:padding="10dp" />

        <TextView
            android:padding="10dp"
            android:textColor="#AAEC0B0B"
            android:id="@+id/tvKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Tên khách hàng"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/quanly"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_folder_black_24dp" />

            <TextView
                android:id="@+id/quanlysp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Quản lý sản phẩm"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" > "
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/quanlydhhh"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_folder_black_24dp" />
            <TextView
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/quanlydh"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Đơn hàng"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" > "
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LLquanlydh"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_shopping_cart_black_24dp" />
                <TextView
                    android:id="@+id/quanlydhh"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Đơn hàng"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" > "
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:id="@+id/dongdonhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/choxacnhan"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/choxacnhan"
                android:layout_width="50dp"
                android:layout_height="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chờ xác nhận"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/xacnhan"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/xacnhan"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/danggiao"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/in_transit_50px"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang giao"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/dagiao"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shipped_50px"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã giao"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bieudo"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bieudo" />

            <TextView
                android:id="@+id/thongke"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Thống kê"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" > "
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_people_black_24dp" />

            <TextView
                android:id="@+id/setting"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hồ sơ của tôi"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" > "
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:background="#FFFFFF"
            android:id="@+id/login1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/login_32px" />

            <TextView
                android:id="@+id/login"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Đăng nhập / Đăng ký"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" > "
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:id="@+id/logout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/logout_rounded_left_32px" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Đăng xuất"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" > "
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>