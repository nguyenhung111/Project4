<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimKiem.TaiKhoan">
    <androidx.appcompat.widget.Toolbar
        app:title="Thông tin"
        android:id="@+id/toolacc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imgLuu"
            android:layout_marginLeft="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_done_black_24dp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textColor="#0F0F0F"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/tenTV"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textSize="20dp"/>
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/texttenDn"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textColor="#0F0F0F"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tenDN"
            android:layout_toRightOf="@+id/texttenDn"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:textSize="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textColor="#0F0F0F"
            android:layout_height="wrap_content"
            android:text="Mat khau"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/matkhau"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matkhau"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textColor="#0F0F0F"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/textDiachi"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textColor="#0F0F0F"
            android:layout_height="wrap_content"
            android:text="Số điện thoại "
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/textSDT"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SDT"
            android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/Doimatkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thay đổi mật khẩu"
        android:background="@null"/>
</LinearLayout>