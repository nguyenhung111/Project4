<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbardanhmuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Danh Mục Sản phẩm"
        app:titleTextColor="#096D79">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#11CCBC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Danh mục theo hãng"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/acer"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/acer" />

                <ImageButton
                    android:id="@+id/hp"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/hp" />

                <ImageButton
                    android:id="@+id/asus"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/asus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/lenovo"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/lenovo" />

                <ImageButton
                    android:id="@+id/dell"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/dell" />

                <ImageButton
                    android:id="@+id/msi"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/msi" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#0AE0CE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh mục theo khoảng giá"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ScrollView
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/gia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Dưới 10 triệu" />

            <Button
                android:id="@+id/gia2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Từ 10 đến 20 triệu" />

            <Button
                android:id="@+id/gia3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Từ 20 triệu đến 30" />

            <Button
                android:id="@+id/gia4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Từ 30 đến 40 triệu" />

            <Button
                android:id="@+id/gia5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Từ 40 đến 50 triệu" />

            <Button
                android:id="@+id/gia6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Trên 50 triệu" />
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>